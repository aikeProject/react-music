@keyframes rotateAnimation {
    0% {
        transform rotate(0deg)
    }
    100% {
        transform rotate(360deg)
    }
}

.loading-content
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    display flex
    justify-content center
    align-items center
    background rgba(0, 0, 0, 0.8)
    .loading-img
        display flex
        align-items center
        flex-direction column
        img
            display block
            animation rotateAnimation 1s linear infinite
        .title
            margin-top 0.05
            font-size 0.16rem
            color #cd4f89
            letter-spacing 1px


