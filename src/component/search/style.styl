@import "../../assets/stylus/common.styl"
.search-music
    width 100%
    height 100%
    /*background-image: linear-gradient(177deg, #000000 0%, #343038 100%)*/
    linear(177deg, #000, #343038)
    color #e2509d
    position relative
    .search-wrapper
        padding 0.4rem
        position relative
        .search-content
            padding 0.2rem
            border-radius 3px
            background-color #e2a8c3
            line-height 0
            display flex
            align-items center
            .search-input
                width 80%
                margin-left 10px
                background none
                border none
                outline none
                vertical-align top
                color #e2509d
                font-size 16px
            .icon-search
                font-size 16px
                color #e2509d
        .search-btn
            position absolute
            font-size 16px
            top 50%
            right .6rem
            transform translateY(-50%)
    .music-hot
        .title
            font-size 20px
            color #e2509d
            margin-left 0.4rem
        .hot-list
            font-size 13px
            color #e22767
            display flex
            flex-wrap wrap
            padding .4rem
            .hot-item
                flex 0 0 auto
                background #e2a8c3
                padding 5px 7px
                margin 5px
                border-radius 10px
                &:active
                    background #e288a3
    .search-result
        padding 0 .4rem
        position absolute
        top 1.6rem
        left 0
        right 0
        bottom 0
        .album-wrapper, .singer-wrapper, .song-wrapper
            font-size 16px
            .left
                float left
                width 1rem
                height 1rem
                img
                    width 100%
                    height 100%
                    display block
            .right
                float left
                width 5rem
                margin-left 10px
                .name
                    font-size 18px
                    margin-top 3px
                .singer
                    margin-top 5px
        .singer-wrapper
            .left img
                border-radius 50%
            .right .info
                margin-top 5px
        .song-wrapper
            .left
                display flex
                justify-content center
                align-items center
                font-size 30px
    .search-result .scroll > div > div
        margin 5px 0

