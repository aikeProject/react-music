.App
    height 100%
    position relative
    .header
        height 1.12rem
        background #0e0e0e
        display flex
        justify-content center
        align-items center
        .logo
            width 1.5rem
            height 0.65rem
            display block
    .tab-bar
        height 0.7rem
        background #f9f9f8
        display flex
        font-size 0.3rem
        .tab-item
            height 0.7rem
            flex 1
            text-align center
            line-height .7rem
            color #010101
            .nav-link
                height 0.7rem
                display block
                color inherit
                text-decoration none
                box-sizing border-box
                &.active
                    color #e2509d
                    border-bottom 2px solid #e2509d
    .music-view
        position absolute
        top 1.82rem
        left 0
        right 0
        bottom 1.04rem

.music-ico
    position: fixed
    z-index: 1000
    margin-top: -7px
    margin-left: -7px
    color: #FFD700
    font-size: 14px
    display none
    transition: transform 1s cubic-bezier(.59, -0.1, .83, .67)
    transform: translate3d(0, 0, 0)
    div
        transition: transform 1s

/*详情页动画*/
/* 进入时动画 */
.translate-enter
    transform: translate3d(100%, 0, 0)
    &.translate-enter-active
        transition: transform .3s
        transform: translate3d(0, 0, 0)

/* 退出 */
.translate-exit
    transform translate3d(0, 0, 0)
    &.translate-exit-active
        transition transform 0.3s
        transform translate3d(100%, 0, 0)
