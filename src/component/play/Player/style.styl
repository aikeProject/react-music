.player
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-image: linear-gradient(177deg, #000000 0%, #343038 100%)
    color #ff749b
    font-size 18px
    z-index 100
    display none
    transform-origin left bottom
    &.player-rotate-enter
        transform rotate(90deg)
        &.player-rotate-enter-active
            transition transform 0.3s
            transform rotate(0deg)
    &.player-rotate-exit
        transform rotate(0deg) translate3d(0, 0, 0)
        &.player-rotate-exit-active
            transition transform 0.3s
            transform rotate(90deg) translate3d(100%, 0, 0)
    .header
        position fixed
        width 100%
        font-size 20px
        color #ff749b
        height 55px
        line-height 55px
        text-align center
        z-index 100
        background none
        .header-back
            position absolute
            left 0.2rem
            font-size 22px
        .header-title
            margin: 0 40px
            letter-spacing 3px
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
    .singer-top
        margin-top 1.4rem
        text-align center
        .singer-name
            display inline-block
            position relative
            &:before, &:after
                content ''
                width 0.3rem
                position absolute
                top 50%
                border 1px solid #ff749b
            &:before
                left -0.4rem
            &:after
                right -0.4rem
    .singer-middle
        position absolute
        top 2rem
        bottom 2.4rem
        width 100%
        display flex
        justify-content center
        align-items center
        .singer-img
            width 5.2rem
            height @width
            border-radius 50%
            border 0.16rem solid #ff749b
            img
                display block
                width 100%
                height 100%
                border-radius 50%
            &.rotate
                animation: rotate 15s linear infinite
    .singer-bottom
        position absolute
        bottom 0
        width 100%
        height 2.4rem
        .wrapper
            padding 0 30px
            .progress-wrapper
                display flex
                align-items center
                height 0.6rem
                line-height 0.6rem
                font-size 0.24rem
                font-weight 400
                .progress-play
                    flex 1
                .current-time
                    margin-right 5px
                .total-time
                    padding-left 5px
    .play-wrapper
        display flex
        font-size 0.8rem
        justify-content space-around
        margin-top 0.3rem
    .player-bg
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index -1
        background-repeat no-repeat
        background-size cover
        background-position center center
        opacity 0.8
        /* filter blur() 设置高斯模糊 */
        filter blur(80px)
        transform translate3d(0, 0, 0)
        transition background-image 0.3s

@keyframes rotate{
    0%{
        transform rotate(0deg)
    }
    100%{
        transform rotate(360deg)
    }
}
