.mini-player
    position fixed
    right 0
    left 0
    bottom 0
    height 1.04rem
    z-index 999
    color #e2509d
    background-image: linear-gradient(90deg, #3e192c 0%, #262626 100%)
    .player-img
        position absolute
        width 0.96rem
        height 0.96rem
        top -0.12rem
        left 0.2rem
        border-radius 50%
        border 2px solid rgba(111, 221, 221, 0.3)
        background #262626
        img
            width 100%
            height 100%
            display block
            border-radius 50%
        &.rotate
            animation rotate 10s linear infinite
    .player-center
        height 1.04rem
        padding: 6px 15px 0 66px
        box-sizing border-box
        .song,.singer
            max-width: 220px
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
        .song
            margin-top -3px
            font-size 14px
            color #e2509d
        .singer
            margin-top -2px
            font-size 12px
        .progress-wrapper
            margin-top -5px
    .player-right
        position absolute
        top 0.3rem
        right 0.3rem
        color #e2509d
        font-size 26px
        .ml
            margin-left 10px

@keyframes rotate{
    0%{
        transform rotate(0deg)
    }
    100%{
        transform rotate(360deg)
    }
}
