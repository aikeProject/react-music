.play-list-bg
    position fixed
    top 0
    left 0
    z-index 1000
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.3)
    transform translate3d(0, 0, 0)
    &.fade-enter
        .play-list-wrap
            transform: translate3d(0, 100%, 0)
    &.fade-enter-active
        .play-list-wrap
            transform: translate3d(0, 0, 0)
            transition: transform .5s
    &.fade-exit
        .play-list-wrap
            transform: translate3d(0, 0, 0)
    &.fade-exit-active
        .play-list-wrap
            transform: translate3d(0, 100%, 0)
            transition: transform .5s
    .play-list-wrap
        position absolute
        left 0
        bottom 0
        width 100%
        background-image: linear-gradient(177deg, #262626 0%, #512235 100%)
        font-size 16px
        color #e2509d
        transform: translate3d(0, 0, 0)
        .play-list-head
            height 0.8rem
            line-height 0.8rem
            box-sizing border-box
            border-bottom 1px solid #e2509d
            .head-title
                float left
                margin-left 0.24rem
            .close
                float right
                margin-right 0.24rem
        .play-list
            height 250px
            .play-list-item
                display flex
                justify-content space-between
                padding 3px 0
                border 1px solid #bd4383
                box-sizing border-box
                .item-left
                    margin-left 5px
                    display flex
                    justify-content space-between
                    align-items center
                    .song
                        margin-left 15px
                        .song-name, .song-singer
                            display: block
                            overflow: hidden
                            text-overflow: ellipsis
                            white-space: nowrap
                        .song-singer
                            font-size 12px
                        &.current
                            .song-name, .song-singer
                                color #ff1972
                .item-right
                    display flex
                    align-items center
                    margin-right 5px



